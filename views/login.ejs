<body>
  <%- include('partials/_header') %>

    <!-- Page-specific (main) content here -->

    <main style="margin: 1em;">
      <!-- main menu -->
      <div class="menu-display">
        <%- include('partials/_menu') %>
          <h3>Login</h3>
          <div class="form-group mb-2">
            <form method="POST" action="/api/users/login" class="form-inline">
              <label for="email">Enter an email:</label>
              <input class="form-right" type="text" name="email" placeholder="Enter an email"
                style="width: 300px; margin: 1em">
              <br>
              <label for="password">Enter a password:</label>
              <input class="form-control" type="password" name="password" placeholder="Enter a password"
                style="width: 300px; margin: 1em">
              <br>
              <button type="submit" class="btn btn-primary">Login</button>
            </form>
          </div>
          </form>
      </div>
    </main>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
